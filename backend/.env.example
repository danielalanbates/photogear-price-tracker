# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/photogear_tracker
DB_HOST=localhost
DB_PORT=5432
DB_NAME=photogear_tracker
DB_USER=photogear_user
DB_PASSWORD=your_secure_password

# Server Configuration
PORT=3000
NODE_ENV=development
API_BASE_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d

# Email Configuration (for alerts)
EMAIL_SERVICE=gmail
EMAIL_FROM=noreply@photogeartracker.com
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password

# Scraping Configuration
SCRAPE_INTERVAL_HOURS=6
SCRAPE_TIMEOUT_MS=30000
MAX_CONCURRENT_SCRAPES=5

# Proxy Configuration (optional - for production)
# PROXY_URL=http://proxy.example.com:8080
# PROXY_USERNAME=
# PROXY_PASSWORD=

# External APIs (optional)
# EBAY_API_KEY=
# AMAZON_API_KEY=

# Stripe Configuration (for payments - add later)
# STRIPE_SECRET_KEY=
# STRIPE_WEBHOOK_SECRET=

# Sentry Configuration (for error tracking - add later)
# SENTRY_DSN=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
