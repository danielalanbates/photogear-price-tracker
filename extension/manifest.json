{
  "manifest_version": 3,
  "name": "PhotoGear Price Tracker",
  "version": "1.0.0",
  "description": "Track photography gear prices across B&H, Adorama, KEH, MPB, and more. Never overpay for camera gear again!",
  "permissions": [
    "storage",
    "notifications",
    "alarms"
  ],
  "host_permissions": [
    "https://www.bhphotovideo.com/*",
    "https://www.adorama.com/*",
    "https://www.keh.com/*",
    "https://www.mpb.com/*",
    "https://www.ebay.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.bhphotovideo.com/c/product/*",
        "https://www.adorama.com/*/p/*",
        "https://www.keh.com/shop/*",
        "https://www.mpb.com/en-us/product/*"
      ],
      "js": ["config.js", "content.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
